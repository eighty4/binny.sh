{
  "name": "@eighty4/install-template",
  "version": "0.0.1",
  "author": "Adam McKee <adam.be.g84d@gmail.com>",
  "license": "BSD-3-Clause",
  "type": "module",
  "main": "lib/Template.js",
  "types": "lib/Template.d.ts",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "test": "pnpm test:unit && pnpm test:gold && pnpm test:integration",
    "test:gold": "vitest run --mode=gold",
    "test:gold:update": "UPDATE_GOLD=1 pnpm test:gold",
    "test:integration": "./gold/integration_test.sh",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "lib/**/*",
    "src/**/*",
    "gold/**/*.sh",
    "package.json",
    "tsconfig.json"
  ]
}
